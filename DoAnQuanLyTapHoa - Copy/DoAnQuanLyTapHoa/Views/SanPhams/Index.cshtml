@model IEnumerable<DoAnQuanLyTapHoa.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<div class="headerOfQuanLy">
    <h2 class="headerTextOfQuanLy">Quản lý Sản Phẩm</h2>

    <p class="createNew">
        @Html.ActionLink("Thêm Mới", "Create", "SanPhams", null, new { @class = "createNew btn btn-light" })
    </p>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSP)
            <p>Tên sản phẩm</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hinh1)
            <p>Hình sản phẩm</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mota)
            <p>Mô tả</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaSp)
            <p>Giá</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
            <p>Số lượng</p>
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.PhanLoai.Tenloai)
            Loại 
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hinh1)
                <img src="~/Content/images/@item.Hinh1" width="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.PhanLoai.Tenloai)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }

</table>
